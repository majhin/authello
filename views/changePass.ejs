<div class="d-flex justify-content-center">
	<form method="post" action="/users/update-password/<%= user.id %>">
		<div class="row mb-3">
			<label for="email" class="form-label">Email address</label>
			<input
				type="email"
				name="email"
				class="form-control"
				id="email"
				placeholder="<%= user.email %>"
				disabled
			/>
		</div>
		<div class="row mb-3">
			<label for="old" class="form-label">Old Password</label>
			<input
				type="password"
				name="old"
				class="form-control"
				id="old"
				placeholder="Enter your old password"
				required
			/>
		</div>
		<div class="row mb-3">
			<label for="new" class="form-label">New Password</label>
			<input
				type="password"
				name="new"
				class="form-control"
				id="new"
				placeholder="Enter your new password"
				required
			/>
		</div>
		<div class="row mb-3">
			<label for="cnew" class="form-label">Confirm New Password</label>
			<input
				type="password"
				name="cnew"
				class="form-control"
				id="cnew"
				placeholder="Confirm your new password"
				required
			/>
		</div>
		<a class="btn btn-outline-secondary m-1" href="/" role="button">Back</a>
		<button type="submit" class="btn btn-primary">Update Password</button>
	</form>
</div>
